
@using sirket.Models.Entity
@model List<marka_kategori>

@{
    ViewBag.Title = "CihazEkle";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<h2>CihazEkle</h2>
<form action="/cihaz/CihazEkle" class="form-group" method="post">

    <div>
        <label>Cihaz Ad</label>
        <input type="text" class="form-control" name="cihaz_ad" required="" />
    </div>

    <br />
   
    <div class="form-group">
        <label for="sel1">Cihaz Tür:</label>
        <select class="form-control" id="sel1" name="cihaz_tür">
            @*<option value="Seçiniz">Seçiniz</option>*@
            <option value="Laptop">Laptop</option>
            <option value="Masaüstü">Masaüstü</option>

        </select>
    </div>
    @*<input type="text" class="form-control" name="cihaz_tür" required="" />*@
    <br />
    <label>Cihaz Marka</label>
    <select class="form-control" id="sel1" name="marka_id">
        @foreach (var item in Model)
        {

            <option value="@item.marka_id">@item.marka_ad</option>

        }
    </select>


        <div>
            <label>Cihaz Konum</label>
            <input type="text" class="form-control" name="cihaz_konum" required="" />
        </div>


        <div class="form-group">
            <label for="sel1">Cihaz Durum:</label>
            <select class="form-control" id="sel2" name="cihaz_durum">
                @*<option value="Seçiniz">Seçiniz</option>*@
                <option value="Aktif">Aktif</option>
                <option value="Pasif">Pasif</option>

            </select>
        </div>


        <div>
            <label>Cihaz Kayıt Tarih</label>
            <input type="text" class="form-control" name="cihaz_zimmet_tarih" required="" />
        </div>
        <br />
        <button href="~/cihaz/Index" class="btn btn-info">Cihaz Ekle</button>

    </form>
<link href="~/Scripts/DataTables/css/dataTables.bootstrap4.css" rel="stylesheet" />
