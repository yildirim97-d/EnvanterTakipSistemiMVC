@using sirket.Models.Entity;

@model List<cihaz>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<h2> Cihaz Index</h2>
<table id="tbl1" class="table table-bordered">
    <thead>
        <tr>
            <th>Cihaz Ad</th>
            @*<th>Cihaz Sahip</th>*@
            <th>Cihaz Tür</th>
            <th>Cihaz Marka</th>
            <th>Cihaz Konum</th>
            <th>Cihaz Durum </th>
            <th>Cihaz Kayıt Tarih</th>
            <th>SİL</th>
            <th>GÜNCELLE</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var chz in Model)
        {

            <tr>

                <td>@chz.cihaz_ad</td>
                @*<td>@chz.cihaz_sahip</td>*@
                <td>@chz.cihaz_tür</td>
                <td>@chz.marka_kategori.marka_ad</td>
                <td>@chz.cihaz_konum</td>
                <td>@chz.cihaz_durum</td>
                <td>@chz.cihaz_zimmet_tarih</td>
                <td><a href="/cihaz/SİL/@chz.cihaz_id" class="button blue_alt">SİL</a></td>
                <td><a href="/cihaz/Guncelle/@chz.cihaz_id" class="button black">GÜNCELLE</a></td>
            </tr>
        }
    </tbody>
</table>
<br />
<a href="/cihaz/CihazEkle" class="button grey"> YENİ CİHAZ EKLE </a>
<a href="/MarkaKategori/MarkaKategoriEkle" class="button grey"> YENİ KATEGORİ EKLE </a>
