@using sirket.Models.Entity;
@model List<tel_marka>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<<h2>Marka Kategori Index</h2>

<table id="tbl8" class="table table-bordered">
    <thead>
        <tr>
            <th>Marka kategori Id</th>
            <th>Marka Ad</th>

            <th>SİL</th>
            <th>GÜNCELLE</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var tm in Model)
        {

            <tr>
                <td>@tm.telmarka_id</td>
                <td>@tm.telmarka_adi</td>
                <td><a href="/TelMarka/Delete/@tm.telmarka_id" class="button blue_alt">SİL</a></td>
                <td><a href="/TelMarka/Edit/@tm.telmarka_id" class="button black">GÜNCELLE</a></td>
            </tr>
        }
    </tbody>
</table>
<br />
<a href="/TelMarka/TelMarkaEkle" class="button grey"> YENİ KATEGORİ EKLE </a>
