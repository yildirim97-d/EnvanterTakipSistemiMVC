@using sirket.Models.Entity;


@model List<admin>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<h2>Admin Index</h2>

<table id="tbl2" class="table table-bordered">
    <thead>

        <tr>
            <th>Admin Ad</th>
            <th>Admin Sifre</th>
            <th>SİL</th>
            <th>GÜNCELLE</th>
        </tr>

    </thead>
    <tbody>
        @foreach (var adm in Model)
        {

            <tr>
                <td>@adm.admin_ad</td>
                <td>@adm.admin_sifre</td>
                <td><a href="/admin/SİL/@adm.admin_id" class="button blue_alt">SİL</a></td>
                <td><a href="/admin/Guncelle/@adm.admin_id" class="button black">GÜNCELLE</a></td>
            </tr>
        }
    </tbody>
</table>

<a href="/admin/AdminEkle/" class="button grey"> YENİ ADMİN EKLE </a>
