@using sirket.Models.Entity;
@model List<zimmet>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<h2>Zimmetle Index</h2>

<table id="tbl12" class="table table-bordered">
    <thead>
        <tr>
            <th>Cihaz Ad</th>
            <th>Kullanici Ad</th>
            <th>Cep Telefonu Model</th>
            <th>Cihaz Zimmet Tarih</th>
            <th>SİL</th>
            <th>GÜNCELLE</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var zb in Model)
        {

        <tr>

            <td>@zb.cihaz.cihaz_ad</td>
            <td>@zb.kullanici.kullanici_adi</td>
            @{
                if (zb.telmarka_id != null)
                {
                    <td>@zb.tel_marka.telmarka_adi</td>
                }
                else
                {
        <td>- Marka Bulunamadı -</td>
                    
                }
               
            }

            @*<td>@zb.ceptelefonu_model</td>*@
            <td>@zb.zimmet_tarih</td>
            <td><a href="/zimmet/Delete/@zb.zimmet_id" class="button blue_alt">SİL</a></td>
            <td><a href="/zimmet/Edit/@zb.zimmet_id" class="button black">GÜNCELLE</a></td>
        </tr>
        }
    </tbody>
</table>
<br />
<a href="/zimmet/ZimmetEkle" class="button grey"> Yeni Zimmet Ekle </a>
<a href="/TelMarka/TelMarkaEkle" class="button grey"> YENİ KATEGORİ EKLE </a>
<link href="~/Scripts/DataTables/css/dataTables.bootstrap4.css" rel="stylesheet" />
<link href="https://cdn.datatables.net/1.10.15/css/dataTables.bootstrap.min.css" rel="stylesheet" />
<link href="https://cdn.datatables.net/responsive/2.1.1/css/responsive.bootstrap.min.css" rel="stylesheet" />
<script src="https://cdn.datatables.net/1.10.15/js/jquery.dataTables.min.js"></script>
<script src="https://cdn.datatables.net/1.10.15/js/dataTables.bootstrap4.min.js "></script>
<script>
    $('#tbl12').dataTable({});
</script>