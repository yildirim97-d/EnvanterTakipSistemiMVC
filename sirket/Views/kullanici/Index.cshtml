@using sirket.Models.Entity;

@model List<kullanici>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}


<h2> Kullanıcı Index</h2>
<table id="tbl4" class="table table-bordered">
    <thead>
        <tr>
            <th>Kullanici Ad</th>
            <th>Kullanici Sifre</th>
            <th>Kullanici Departman</th>
            <th>SİL</th>
            <th>GÜNCELLE</th>

        </tr>
    </thead>
    <tbody>

        @foreach (var klc in Model)
        {

            <tr>


                <td>@klc.kullanici_adi</td>
                <td>@klc.kullanici_sifre</td>
                <td>@klc.kullanici_departman</td>
                <td><a href="/kullanici/Delete/@klc.kullanici_id" class="button blue_alt">SİL</a></td>
                <td><a href="/kullanici/Edit/@klc.kullanici_id" class="button black">GÜNCELLE</a></td>
                @*<td><a class="btn btn-success">GÜNCELLE</a></td>*@


            </tr>

        }

    </tbody>

</table>
<a href="/kullanici/KullaniciEkle/" class="button grey"> YENİ KULLANİCİ EKLE </a>
<link href="~/Scripts/DataTables/css/dataTables.bootstrap4.css" rel="stylesheet" />
<link href="https://cdn.datatables.net/1.10.15/css/dataTables.bootstrap.min.css" rel="stylesheet" />
<link href="https://cdn.datatables.net/responsive/2.1.1/css/responsive.bootstrap.min.css" rel="stylesheet" />
<script src="https://cdn.datatables.net/1.10.15/js/jquery.dataTables.min.js"></script>
<script src="https://cdn.datatables.net/1.10.15/js/dataTables.bootstrap4.min.js "></script>
<script>
    $('#tbl4').dataTable({});
</script>


